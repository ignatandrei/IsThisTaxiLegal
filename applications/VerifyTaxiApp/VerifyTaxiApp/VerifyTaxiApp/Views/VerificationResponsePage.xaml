<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerifyTaxiApp.Views.VerificationResponsePage"
             NavigationPage.HasNavigationBar="{Binding BackButtonExists}">
      <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand"  BackgroundColor ="{Binding ImageSource}" VerticalOptions="FillAndExpand">
            <!--<Image Source="{Binding ImageSource}" Aspect="Fill"></Image>-->
            <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="{Binding ResponseText}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="26" TextColor="#E6E6FA"/>
                <Label Grid.Row="1" Text="{Binding DriverName}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="26" TextColor="#E6E6FA"/>
                <Label Grid.Row="2" Text="{Binding Car}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="26" TextColor="#E6E6FA" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>